<% include ../partials/header %>

<div id="edit-container">
	
	<div class="black-panel" id="edit-panel" class="row">
		<h1>Edit "<%= post.title %>"</h1>
		<form class="" action="/posts/<%= post.id %>?_method=PUT" method="post">
			<div class="form-group">
				<input class="form-control" type="text" name="title" placeholder="Title" value="<%= post.title %>">
			</div>
			<div class="form-group">
				<input class="form-control" type="date" name="date" placeholder="Date" value="<%= post.date %>">
			</div>
			<div class="form-group">
				<textarea id="editContent" class="form-control" rows="20" name="content" placeholder="Content"><%= post.content %></textarea>
			</div>
			<div class="form-group">
				<button class="form-control" class="btn btn-primary">Submit!</button>
			</div>
		</form>
	</div>
	
	<div class="black-panel" id="preview-panel" class="row">
		<h1><%= post.title %></h1>
		<p><%= post.date %></p>
		<div class="post-css" id="postContent"><%= post.content %></div>
	</div>

</div>

<% include ../partials/footer %>

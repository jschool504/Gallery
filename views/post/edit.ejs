<% include ../partials/header %>

<div class="black-panel" class="row">
	<h1>Edit "<%= post.title %>"</h1>
	<form class="edit-form" action="/posts/<%= post.id %>?_method=PUT" method="post">
		<div class="form-group">
			<input class="form-control" type="text" name="title" placeholder="Title" value="<%= post.title %>">
		</div>
		<div class="form-group">
			<input class="form-control" type="date" name="date" placeholder="Date" value="<%= post.date %>">
		</div>
		<div class="form-group">
			<textarea class="form-control" rows="13" name="content" placeholder="Content"><%= post.content %></textarea>
		</div>
		<div class="form-group">
			<button class="form-control" class="btn btn-primary">Submit!</button>
		</div>
	</form>
</div>

<% include ../partials/footer %>

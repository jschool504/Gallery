<% include ../partials/header %>

<script src="/js/post_edit.js"></script>

<div id="edit-container">
	
	<div class="black-panel" class="row">
		<h1>Edit "<%= post.title %>"</h1>
		<form class="" action="/posts/<%= post.id %>?_method=PUT" method="post">
			<div class="form-group">
				<input class="form-control" type="text" name="title" placeholder="Title" value="<%= post.title %>">
			</div>
			<div class="form-group">
				<input class="form-control" type="date" name="date" placeholder="Date" value="<%= post.date %>">
			</div>
			<div class="form-group">
				<button type="button" class="post-edit-button" id="boldButton">B</button>
				<button type="button" class="post-edit-button" id="italicButton">I</button>
				<button type="button" class="post-edit-button" id="underlineButton">U</button>
				<button type="button" class="post-edit-button" id="fontButton">F</button>
				<button type="button" class="post-edit-button" id="imgButton">Image</button>
				<button type="button" class="post-edit-button" id="linkButton">Link</button>
				<button type="button" class="post-edit-button" id="leftAlignButton">L</button>
				<button type="button" class="post-edit-button" id="centerAlignButton">M</button>
				<button type="button" class="post-edit-button" id="rightAlignButton">R</button>
			</div>
			<div class="form-group">
				<textarea style="visibility: hidden; display: none;" name="content" id="postContentArea"><%= post.content %></textarea>
				<div id="postContentEditor" contentEditable="true"></div>
			</div>
			<div class="form-group">
				<button class="form-control" class="btn btn-primary">Submit!</button>
			</div>
		</form>
	</div>

</div>

<% include ../partials/footer %>

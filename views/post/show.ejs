<% include ../partials/header %>

<script src="/js/post_show.js"></script>
<link rel="stylesheet" href="/stylesheets/post_show.css"/>

<div class="post-panel">
	<h1><%= post.title %></h1>
	<p><%= post.date %> | <%= post.category %>
	<% if (currentUser !== null && post.display == 0) { %>| <span style="color:red">Private</span><% } %></p></a></p>
	<div style="visibility: hidden; display: none;" id="postContentData"><%= post.content %></div>
	<div id="postContent"></div>
	<% if (currentUser) {%>
		<div id="post-admin-paragraph">
			<form class="delete-form" action="<%= post.id %>?_method=DELETE" method="post">
				<a class="edit-link" href="<%= post.id %>/edit">Edit</a>
				<button>Delete</button>
			</form>
		</div>
	<% } %>
</div>

<% include ../partials/footer %>

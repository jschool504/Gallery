<% include ../partials/header %>

<div id="black-panel" class="row">
	<h1>New Work</h1>
	<form id="edit-form" class="form-horizontal" action="/works" method="post">
		<div class="form-group">
			<input class="form-control" type="text" name="title" placeholder="Title">
		</div>
		<div class="form-group">
			<input class="form-control" type="number" name="width" placeholder="Width (in)">
			<input class="form-control" type="number" name="height" placeholder="Height (in)">
		</div>
		<div class="form-group">
			<input class="form-control" type="url" name="image_url" placeholder="Image URL">
		</div>
		<div class="form-group">
			<textarea class="form-control" rows="5" name="info" placeholder="Info"></textarea>
		</div>
		<div class="form-group">
			<button class="form-control" class="btn btn-primary">Create!</button>
		</div>
	</form>
</div>

<% include ../partials/footer %>
